{
    "manifest_version": 2,
    "name": "Overleave",
    "description":"Hot reload extension for Overleaf to use the text editor and PDF compiler in different windows.",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": ["https://*.overleaf.com/project/*"],
            "js": ["javascript/content.js"]
        },
        {
            "matches": ["<all_urls>"],
            "match_about_blank": true,
            "js": ["javascript/listener.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": ["javascript/background.js"],
        "persistent": false
    },
    "icons": {
        "16": "icons/icon-16x16.png",
        "32": "icons/icon-32x32.png",
        "48": "icons/icon-48x48.png",
        "128": "icons/icon-128x128.png"
    },
    "web_accessible_resources": [ "pdf.html" ],
    "permissions": ["activeTab", "tabs", "background", "webNavigation", 
                    "nativeMessaging", "storage", "declarativeContent", 
                    "http://*/", "https://*/","https://mozilla.github.io/pdf.js/build/pdf.js"],
    "content_security_policy": "script-src 'self' https://mozilla.github.io/; object-src 'self'; default-src 'self';",
    "sandbox": {
        "pages": ["pdf/pdf.html"]
    }
}